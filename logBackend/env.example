# Database
DATABASE_URL="postgresql://postgres:password@localhost:5432/logpilot?schema=public"

# Server
PORT=8000
NODE_ENV=development

# JWT Authentication
JWT_SECRET="your-super-secret-jwt-key-change-in-production"
JWT_EXPIRY="24h"

# Redis (for streaming/caching)
REDIS_URL="redis://localhost:6379"

# Anomaly Detection Settings
ANOMALY_WINDOW_SECONDS=120
ANOMALY_BASELINE_SECONDS=3600
ANOMALY_FACTOR=3.0
ANOMALY_MIN_ERRORS=3

# S3/File Storage (for raw log storage)
AWS_REGION="us-east-1"
AWS_ACCESS_KEY_ID="your-access-key"
AWS_SECRET_ACCESS_KEY="your-secret-key"
S3_BUCKET_NAME="logpilot-raw-logs"

# API Settings
API_RATE_LIMIT=1000
BATCH_SIZE=500
BATCH_TIMEOUT_MS=1000
